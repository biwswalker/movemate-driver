{
  "expo": {
    "name": "Movemate Driver",
    "slug": "movemate-driver",
    "version": "1.0.0-beta.3",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "movemateth",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.movemateth.driverapp",
      "infoPlist": {
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Movemate Driver ใช้ตำแหน่งของท่านเพื่อติดตามงานขนส่งแบบ Real-time แม้ว่าแอปจะทำงานอยู่เบื้องหลัง",
        "NSLocationWhenInUseUsageDescription": "Movemate Driver ใช้ตำแหน่งของท่านเพื่อแสดงตำแหน่งปัจจุบันบนแผนที่",
        "NSMotionUsageDescription": "แอปใช้ข้อมูลการเคลื่อนไหวเพื่อเพิ่มความแม่นยำของตำแหน่ง",
        "UIBackgroundModes": ["location", "fetch"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "googleServicesFile": "./google-services.json",
      "package": "com.movemateth.driverapp",
      "usesCleartextTraffic": true,
      "config": {
        "googleMaps": {
          "apiKey": "_TODO_API_"
        }
      },
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.ACCESS_BACKGROUND_LOCATION"
      ],
      "foregroundService": {
        "location": "ใช้สำหรับติดตามตำแหน่งของคนขับระหว่างการขนส่ง"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "อนุญาตให้ $(PRODUCT_NAME) เข้าถึงรูปภาพของคุณ",
          "cameraPermission": "อนุญาตให้ $(PRODUCT_NAME) เข้าถึงกล้องของคุณ"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "อนุญาตให้ $(PRODUCT_NAME) ใช้ตำแหน่งของท่าน",
          "isAndroidBackgroundLocationEnabled": true,
          "isAndroidForegroundServiceEnabled": true
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "newArchEnabled": true,
            "enableProguardInReleaseBuilds": false,
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0",
            "kotlinVersion": "1.9.25"
          },
          "ios": {
            "newArchEnabled": true,
            "deploymentTarget": "15.1"
          }
        }
      ],
      "expo-font",
      "@react-native-firebase/app"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "ffa954ec-4262-44f0-979e-af3c531cadfc"
      }
    }
  }
}
